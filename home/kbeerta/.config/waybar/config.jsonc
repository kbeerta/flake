{
    "layer": "top",

    "position": "top",

    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "custom/separator",
        "cpu",
        "custom/separator",
        "memory",
        "custom/separator",
        "disk",
        "custom/separator",
        "network",
    ],

    "modules-center": [
    ],

    "modules-right": [
        "backlight",
        "custom/separator",
        "battery",
        "custom/separator",
        "pulseaudio",
        "custom/separator",
        "clock"
    ],

    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name}",
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "cpu": {
        "format": " &#8239;{usage}%",
        "tooltip": false
    },

    "memory": {
        "interval": 30,
        "format": " {used:0.2f}GB",

        "max-length": 10,
        "tooltip": false,
        "warning": 70,
        "critical": 90
    },

    "disk": {
        "unit": "GiB",
        "interval": 30,
        "format": " {specific_used:0.2f}GiB",
        "tooltip": false
    },

    "network": {
        "format-wifi": " &#8239;({signalStrength}%)",
        "format-ethernet": "&#8239;{ifname}: {ipaddr}/{cidr}",
        "format-linked": "&#8239;{ifname} (No IP)",
        "format-disconnected": "✈&#8239;Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },

    "backlight": {
        "format": "{icon}&#8239;{percent}%",
        "format-icons": ["💡", "💡"],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}&#8239;{capacity}%",
        "format-charging": " &#8239;{capacity}%",
        "format-plugged": " &#8239;{capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [" ", " ", " ", " ", " "],
    },

    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{icon} {volume}% {format_source}",
        "format-bluetooth-muted": " {format_source}",
        "format-muted": "  {format_source}",
        "format-source": " {volume}%",
        "format-source-muted": " ",
        "format-icons": {
            "headphone": " ",
            "hands-free": " ",
            "headset": "🎧",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", " ", " "]
        }
    },

    "clock": {
        "interval": 1,
        "format": "  {:%H:%M}"
    },

    "custom/separator": {
        "format": "|",
        "tooltip": false,
        "interval": "once"
    }
}
